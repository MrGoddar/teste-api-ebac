{
  "name": "teste-api-ebac",
  "version": "1.0.0",
  "description": "Exercício de Automação de API - CI/CD",
  "main": "index.js",
  "scripts": {
    "cy:run": "npx cypress run --reporter mochawesome --reporter-options reportDir=cypress/reports,overwrite=false,html=false,json=true",
    "report:merge": "npx mochawesome-merge cypress/reports/*.json > report.json",
    "report:gen": "npx marge report.json --reportDir cypress/reports/html"
  },
  "devDependencies": {
    "cypress": "^13.17.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
